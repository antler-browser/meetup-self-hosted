{
  "name": "meetup",
  "private": true,
  "description": "Scan a QR code at a meetup and see everyone else that scanned the QR code.",
  "license": "MIT",
  "keywords": [
    "antler",
    "irl-browser",
    "qr-code",
    "local-first",
    "did",
    "decentralized-identity",
    "decentralized-identifiers"
  ],
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/update-metadata.js && pnpm --filter=@meetup/shared build",
    "dev": "pnpm --parallel --filter=@meetup/shared --filter=./client --filter=./server dev",
    "dev:client": "pnpm --filter=./client dev",
    "dev:server": "pnpm --filter=./server dev",
    "build": "node scripts/update-metadata.js && pnpm run --filter=@meetup/shared build && pnpm run --filter=./server build && pnpm run --filter=./client build",
    "db:generate": "pnpm --filter=./server db:generate",
    "db:push": "pnpm --filter=./server db:push",
    "db:studio": "pnpm --filter=./server db:studio"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "base58-universal": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "typescript": "~5.9.3"
  }
}
